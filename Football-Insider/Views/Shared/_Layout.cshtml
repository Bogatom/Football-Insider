<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Homepage</title>
    @Styles.Render("~/Content/bootstrap.css")    
    @Styles.Render("~/Content/Site.css")    
    @Styles.Render("~/Content/fontawesome/font-awesome.css")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top" id="banner">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="/Home"><span>Football</span> Insider</a>
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <h5 class="menu-item" align="center">
                            <a href="#" class="nav-link effect-underline">Nieuws</a>
                        </h5>
                    </li>
                    <li class="nav-item">
                        <h5 class="menu-item" align="center">
                            <a href="#" class="nav-link effect-underline">Competities</a>
                        </h5>
                    </li>
                    <li class="nav-item">
                        <h5 class="menu-item" align="center">
                            <a href="#" class="nav-link effect-underline">Uitslagen</a>
                        </h5>
                    </li>
                    <li class="nav-item">
                        <h5 class="menu-item" align="center">
                            <a href="#" class="nav-link effect-underline">Inloggen</a>
                        </h5>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Football Insider - &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/respond.js")
    @Scripts.Render("~/Scripts/ScrollScript.js")
    @Scripts.Render("~/Scripts/Filter.js")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
